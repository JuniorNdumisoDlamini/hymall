<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF8E1"/> <!-- pale yellow -->
            <corners android:radius="6dp"/>
        </shape>
    </item>

    <!-- bag body -->
    <item android:left="6dp" android:right="6dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#5D4037"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- bag handle (rounded rect at top center) -->
    <item android:top="4dp" android:left="10dp" android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFCC80"/>
            <size android:height="6dp"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <!-- small price tag accent -->
    <item android:gravity="right|bottom" android:bottom="10dp" android:right="8dp">
        <shape android:shape="oval">
            <size android:width="8dp" android:height="8dp"/>
            <solid android:color="#FFE082"/>
        </shape>
    </item>

</layer-list>
