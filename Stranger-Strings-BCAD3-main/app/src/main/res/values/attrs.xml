<resources>

    <!-- Global attributes -->
    <attr name="cardBackgroundColor" format="color" />
    <attr name="dividerColor" format="color" />
    <attr name="iconTintColor" format="color" />
    <attr name="badgeBackgroundColor" format="color" />
    <attr name="chatBubbleUserColor" format="color" />
    <attr name="chatBubbleAiColor" format="color" />
    <attr name="bottomNavSelectedColor" format="color" />
    <attr name="bottomNavUnselectedColor" format="color" />

    <!-- Declare progressColor once globally -->
    <attr name="progressColor" format="color" />

    <!-- Animation attributes -->
    <attr name="animationDuration" format="integer" />
    <attr name="animationType" format="enum">
        <enum name="fade" value="0" />
        <enum name="slide" value="1" />
        <enum name="scale" value="2" />
        <enum name="rotate" value="3" />
    </attr>

    <!-- Layout attributes -->
    <attr name="layoutType" format="enum">
        <enum name="linear" value="0" />
        <enum name="grid" value="1" />
        <enum name="staggered" value="2" />
    </attr>

    <!-- Text styling attributes -->
    <attr name="textStyle" format="enum">
        <enum name="normal" value="0" />
        <enum name="bold" value="1" />
        <enum name="italic" value="2" />
        <enum name="boldItalic" value="3" />
    </attr>

    <!-- Border attributes -->
    <attr name="borderWidth" format="dimension" />
    <attr name="borderColor" format="color" />
    <attr name="borderRadius" format="dimension" />

    <!-- Shadow attributes -->
    <attr name="shadowColor" format="color" />
    <attr name="shadowRadius" format="dimension" />
    <attr name="shadowOffsetX" format="dimension" />
    <attr name="shadowOffsetY" format="dimension" />


    <!-- Custom view attributes -->
    <declare-styleable name="BadgeView">
        <attr name="badgeText" format="string" />
        <attr name="badgeColor" format="color" />
        <attr name="badgeTextColor" format="color" />
        <attr name="badgeSize" format="dimension" />
        <attr name="showBadge" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ProgressButton">
        <attr name="buttonText" format="string" />
        <attr name="progressColor" /> <!-- just reference -->
        <attr name="isLoading" format="boolean" />
        <attr name="loadingText" format="string" />
    </declare-styleable>

    <declare-styleable name="StatsCard">
        <attr name="statTitle" format="string" />
        <attr name="statValue" format="string" />
        <attr name="statIcon" format="reference" />
        <attr name="statColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LevelProgressBar">
        <attr name="currentLevel" format="integer" />
        <attr name="currentXP" format="integer" />
        <attr name="maxXP" format="integer" />
        <attr name="levelColor" format="color" />
        <attr name="progressColor" /> <!-- just reference -->
    </declare-styleable>

    <declare-styleable name="NotificationDot">
        <attr name="dotColor" format="color" />
        <attr name="dotSize" format="dimension" />
        <attr name="showDot" format="boolean" />
        <attr name="dotPosition" format="enum">
            <enum name="topRight" value="0" />
            <enum name="topLeft" value="1" />
            <enum name="bottomRight" value="2" />
            <enum name="bottomLeft" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ToggleSwitch">
        <attr name="switchText" format="string" />
        <attr name="switchDescription" format="string" />
        <attr name="isChecked" format="boolean" />
        <attr name="switchColor" format="color" />
    </declare-styleable>

</resources>
