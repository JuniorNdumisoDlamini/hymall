<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/progress_color</item>
        <item name="colorPrimaryDark">@color/logo_gradient_start</item>
        <item name="colorAccent">@color/progress_color</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Rounded FAB corners -->
    <style name="RoundedFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RoundedFAB</item>
    </style>

    <style name="ShapeAppearanceOverlay.RoundedFAB" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- Tic Tac Toe game badge implementation -->

    <!-- Tic Tac Toe Row Layout -->
    <style name="TicTacToeRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Tic Tac Toe Cell (each button) -->
    <style name="TicTacToeCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">@dimen/ttt_cell_min_size</item>
        <item name="android:minHeight">@dimen/ttt_cell_min_size</item>
        <item name="android:textSize">@dimen/ttt_cell_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/ttt_text_primary</item>
    </style>

    <!-- Vertical Divider -->
    <style name="VerticalDivider">
        <item name="android:layout_width">@dimen/ttt_divider_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/ttt_divider_color</item>
    </style>

    <!-- Horizontal Divider -->
    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ttt_divider_size</item>
        <item name="android:background">@color/ttt_divider_color</item>
    </style>




</resources>
