<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/white"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/create_post"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/btn_post"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/post"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/button_primary"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:enabled="false" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Text Input Section -->
            <EditText
                android:id="@+id/et_post_content"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="@string/share_experience_hint"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:background="@drawable/search_background"
                android:padding="16dp"
                android:gravity="top"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLength="500" />

            <!-- Add Photo/Video Section -->
            <LinearLayout
                android:id="@+id/section_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_photo_video"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/btn_add_media"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/search_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_add"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_photo_video_hint"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Selected Media Preview (Initially Hidden) -->
                <LinearLayout
                    android:id="@+id/media_preview_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_media_preview"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/search_background" />

                    <TextView
                        android:id="@+id/tv_media_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                    <ImageView
                        android:id="@+id/btn_remove_media"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_close"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Category Section -->
            <LinearLayout
                android:id="@+id/section_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/btn_select_category"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/search_background"
                    android:paddingHorizontal="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tv_selected_category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/select_category"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_back"
                        android:rotation="270"
                        app:tint="@color/text_secondary" />

                </LinearLayout>

                <!-- Category Options (Initially Hidden) -->
                <LinearLayout
                    android:id="@+id/category_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/search_background"
                    android:layout_marginTop="4dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/category_food_dining"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/food_dining"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/category_shopping"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/shopping"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/category_entertainment"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/entertainment"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/category_facilities"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/facilities"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/category_events"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/events"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/category_services"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/services"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/category_other"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/other"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

            </LinearLayout>

            <!-- Location Section -->
            <LinearLayout
                android:id="@+id/section_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/search_background"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_detected_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/auto_detected_location"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gps_location_detected"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Feeling Section -->
            <LinearLayout
                android:id="@+id/section_feeling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/how_feeling"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <!-- Emoji Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/search_background"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/emoji_happy"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="😊"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/search_background"
                            android:layout_margin="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground" />

                        <TextView
                            android:id="@+id/emoji_love"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="😍"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/search_background"
                            android:layout_margin="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground" />

                        <TextView
                            android:id="@+id/emoji_angry"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="😠"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/search_background"
                            android:layout_margin="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground" />

                        <TextView
                            android:id="@+id/emoji_surprised"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="😲"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/search_background"
                            android:layout_margin="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground" />

                        <TextView
                            android:id="@+id/emoji_excited"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="🤩"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/search_background"
                            android:layout_margin="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/emoji_sad"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="😢"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/search_background"
                            android:layout_margin="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground" />

                        <TextView
                            android:id="@+id/emoji_party"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="🥳"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/search_background"
                            android:layout_margin="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground" />

                        <TextView
                            android:id="@+id/emoji_thinking"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="🤔"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/search_background"
                            android:layout_margin="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground" />

                        <TextView
                            android:id="@+id/emoji_fire"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="🔥"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/search_background"
                            android:layout_margin="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground" />

                        <TextView
                            android:id="@+id/emoji_heart"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="❤️"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/search_background"
                            android:layout_margin="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Privacy Section -->
            <LinearLayout
                android:id="@+id/section_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/rg_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_background"
                    android:padding="16dp">

                    <RadioButton
                        android:id="@+id/rb_public"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_public"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:checked="true"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_public_desc"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="16dp" />

                    <RadioButton
                        android:id="@+id/rb_management_only"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_management"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_management_desc"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="16dp" />

                    <RadioButton
                        android:id="@+id/rb_anonymous"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_anonymous"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_anonymous_desc"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="32dp" />

                </RadioGroup>

            </LinearLayout>

            <!-- Offline Mode Warning -->
            <LinearLayout
                android:id="@+id/offline_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/warning_background"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_notifications"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/warning_text" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offline_mode"
                        android:textSize="14sp"
                        android:textColor="@color/warning_text"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offline_mode_desc"
                        android:textSize="12sp"
                        android:textColor="@color/warning_text"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
