<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="32dp"
    android:gravity="center">

    <!-- Logo Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="48dp">

        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/logo_background"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_hymall"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect_with_community"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center" />

    </LinearLayout>

    <!-- Login Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp">

        <Button
            android:id="@+id/btnGoogleLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/continue_with_google"
            android:textColor="@color/text_primary"
            android:background="@drawable/button_outline"
            android:drawableStart="@drawable/ic_google"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnAppleLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/continue_with_apple"
            android:textColor="@color/text_primary"
            android:background="@drawable/button_outline"
            android:drawableStart="@drawable/ic_apple"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnBiometricLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/use_biometric_login"
            android:textColor="@color/text_primary"
            android:background="@drawable/button_outline"
            android:drawableStart="@drawable/ic_fingerprint"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnGuestLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/continue_as_guest"
            android:textColor="@color/text_primary"
            android:background="@drawable/button_outline"
            android:gravity="center"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Terms and Privacy -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_privacy_text"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:lineSpacingExtra="2dp" />

</LinearLayout>
