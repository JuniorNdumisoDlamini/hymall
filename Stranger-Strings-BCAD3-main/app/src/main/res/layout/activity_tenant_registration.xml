<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tenant_registration"
                android:textSize="28sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Registration Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- Email Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <!-- Added icon container for email field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_email"
                    app:tint="@color/text_secondary"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_field_background"
                    android:hint="@string/email_hint"
                    android:inputType="textEmailAddress"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />

            </LinearLayout>

            <!-- Password Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <!-- Added icon container for password field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_lock"
                    app:tint="@color/text_secondary"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_field_background"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Store Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <!-- Store Information Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_store_info"
                    app:tint="@color/text_secondary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_information"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Store Name Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_store"
                    app:tint="@color/text_secondary"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/etStoreName"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_field_background"
                    android:hint="@string/store_name_hint"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />

            </LinearLayout>

            <!-- Store Number Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_store_number"
                    app:tint="@color/text_secondary"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/etStoreNumber"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_field_background"
                    android:hint="@string/store_number_hint"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />

            </LinearLayout>

            <!-- Department Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_department"
                    app:tint="@color/text_secondary"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/etDepartment"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_field_background"
                    android:hint="@string/department_hint"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Changed button text and ID to reflect registration instead of login -->
        <!-- Register Button -->
        <Button
            android:id="@+id/btnRegisterTenant"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/register_as_tenant"
            android:textColor="@android:color/white"
            android:background="@drawable/button_primary"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Added link to login screen for existing users -->
        <!-- Already Have Account Link -->
        <TextView
            android:id="@+id/tvAlreadyHaveAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/already_have_account"
            android:textColor="@color/primary_color"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground" />

        <!-- OR Divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/divider_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or_continue_with"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginHorizontal="16dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/divider_color" />

        </LinearLayout>

        <!-- Social Login Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/btnGoogleLogin"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/google"
                android:textColor="@color/text_primary"
                android:background="@drawable/button_outline"
                android:drawableStart="@drawable/ic_google"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnAppleLogin"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/apple"
                android:textColor="@color/text_primary"
                android:background="@drawable/button_outline"
                android:drawableStart="@drawable/ic_apple"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Contact Support -->
        <TextView
            android:id="@+id/tvContactSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/contact_mall_management"
            android:textSize="14sp"
            android:textColor="@color/primary_color"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView>
