<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_tenant_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/surface_color">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tenant Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Store Information Section -->
            <TextView
                android:id="@+id/tv_store_info_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store Information"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <!-- Store Logo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/img_store_logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/placeholder"
                    android:scaleType="centerCrop"
                    android:background="@drawable/profile_circle_background"
                    android:clipToOutline="true"
                    android:padding="2dp" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tv_change_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Store Logo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tv_logo_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PNG, JPG up to 2MB"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>
            </LinearLayout>

            <!-- Store Name (settings ID) -->
            <TextView
                android:id="@+id/tv_store_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_store_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:paddingHorizontal="16dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:hint="Enter store name" />

            <!-- Store Description -->
            <TextView
                android:id="@+id/tv_store_description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store Description"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_store_description"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:background="@drawable/input_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:hint="Describe your store..."
                android:gravity="top"
                android:inputType="textMultiLine" />

            <!-- Store Category -->
            <TextView
                android:id="@+id/tv_store_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store Category"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinner_store_category"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:paddingHorizontal="16dp" />

            <!-- Contact Information -->
            <TextView
                android:id="@+id/tv_contact_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Email"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_contact_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:paddingHorizontal="16dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:inputType="textEmailAddress"
                android:hint="store@example.com" />

            <!-- Phone Number -->
            <TextView
                android:id="@+id/tv_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:paddingHorizontal="16dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:inputType="phone"
                android:hint="+1 (555) 123-4567" />



            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <TextView
                android:id="@+id/tv_registration_store_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store Details "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <!-- Store Name (registration id) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_store"
                    app:tint="@color/text_secondary"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/etStoreName"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_field_background"
                    android:hint="Store name (registration)"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />
            </LinearLayout>

            <!-- Store Number (registration id) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_store_number"
                    app:tint="@color/text_secondary"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/etStoreNumber"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_field_background"
                    android:hint="Store number (registration)"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />
            </LinearLayout>

            <!-- Department (registration id) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_department"
                    app:tint="@color/text_secondary"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/etDepartment"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_field_background"
                    android:hint="Department (registration)"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />
            </LinearLayout>

            <!-- Language & Region -->
            <TextView
                android:id="@+id/tv_language_region_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language &amp; Region"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinner_language"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:paddingHorizontal="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_marginVertical="16dp" />

            <!-- Security Section -->
            <TextView
                android:id="@+id/tv_security_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <!-- Biometric -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_biometric_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biometric Login"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tv_biometric_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Use fingerprint or face ID"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_biometric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Change Password"
                android:background="@drawable/button_outline"
                android:gravity="center"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Notifications heading -->
            <TextView
                android:id="@+id/tv_notifications_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <!-- Order notifications -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_order_notifications_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Notifications"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tv_order_notifications_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New orders and updates"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_order_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color" />
            </LinearLayout>

            <!-- Customer messages -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_customer_messages_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Messages"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tv_customer_messages_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Messages and inquiries"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_customer_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color" />
            </LinearLayout>

            <!-- System updates -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_system_updates_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="System Updates"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tv_system_updates_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App updates and maintenance"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_system_updates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color" />
            </LinearLayout>

            <!-- Notification sound -->
            <TextView
                android:id="@+id/tv_notification_sound_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Sound"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinner_notification_sound"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:paddingHorizontal="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_marginVertical="16dp" />

            <!-- Appearance Section -->
            <TextView
                android:id="@+id/tv_appearance_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appearance"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dark_mode_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dark Mode"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tv_dark_mode_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Switch to dark theme"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_dark_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color" />
            </LinearLayout>

            <!-- More section -->
            <TextView
                android:id="@+id/tv_more_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:id="@+id/btn_help_support"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_help"
                    app:tint="@color/text_primary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Help &amp; Support"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginStart="16dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/text_secondary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_sign_out"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logout"
                    app:tint="@color/error_color" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sign Out"
                    android:textSize="16sp"
                    android:textColor="@color/error_color"
                    android:layout_marginStart="16dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/error_color" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_save_changes"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Save Changes"
                android:background="@drawable/button_primary"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
