<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/search_background"
    android:layout_marginBottom="12dp"
    android:padding="16dp">

    <!-- Customer Info Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/iv_customer_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/placeholder"
            android:background="@drawable/avatar_circle_background"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_feedback_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food &amp; Dining"
                    android:textSize="12sp"
                    android:textColor="@color/primary"
                    android:background="@drawable/category_chip_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_feedback_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours ago"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Rating Stars -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rating_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐⭐⭐⭐⭐"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_rating_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Feedback Content -->
    <TextView
        android:id="@+id/tv_feedback_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Great service and amazing food! The staff was very friendly and the atmosphere was perfect for a family dinner."
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="12dp" />

    <!-- Feedback Image (if any) -->
    <ImageView
        android:id="@+id/iv_feedback_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:background="@drawable/search_background"
        android:layout_marginBottom="12dp"
        android:visibility="gone" />

    <!-- Reply Section -->
    <LinearLayout
        android:id="@+id/layout_reply_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_light"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Management Reply:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_management_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for your feedback! We're glad you enjoyed your experience."
            android:textSize="13sp"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/tv_reply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Replied 1 hour ago"
            android:textSize="11sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btn_reply"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="Reply"
            android:textSize="12sp"
            android:textColor="@color/primary"
            android:background="@drawable/button_outline"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_mark_resolved"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="Mark Resolved"
            android:textSize="12sp"
            android:textColor="@color/success_green"
            android:background="@drawable/button_outline_success"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
