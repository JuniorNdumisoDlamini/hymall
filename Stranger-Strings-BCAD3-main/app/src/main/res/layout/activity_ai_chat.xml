<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/chat_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/ai_primary"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginEnd="16dp"
            app:tint="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ai_avatar_background"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_assistant"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/always_here_to_help"
                    android:textColor="@color/ai_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Chat Messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Quick Actions -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_store_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/store_hours"
                android:background="@drawable/quick_action_button"
                android:textColor="@color/ai_primary"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_directions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/directions"
                android:background="@drawable/quick_action_button"
                android:textColor="@color/ai_primary"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_current_deals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_deals"
                android:background="@drawable/quick_action_button"
                android:textColor="@color/ai_primary"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/events"
                android:background="@drawable/quick_action_button"
                android:textColor="@color/ai_primary"
                android:padding="12dp"
                android:textSize="12sp" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/ask_me_about_stores"
            android:background="@drawable/message_input_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:maxLines="3" />

        <ImageView
            android:id="@+id/btn_send"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_send"
            android:background="@drawable/send_button_background"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            app:tint="@android:color/white" />

    </LinearLayout>

</LinearLayout>
